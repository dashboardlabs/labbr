{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext",
      "dom",
      "DOM.Iterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": "../",
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": false,
    "allowJs": true,
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
